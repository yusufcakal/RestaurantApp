<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    tools:context="com.yusufcakal.ra.activity.DeskBasketActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvBasket"
        android:layout_above="@+id/btnOrderVerify"
        />

    <com.cengalabs.flatui.views.FlatButton
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        flatui:fl_touchEffect="fl_ripple"
        flatui:fl_blockButtonEffectHeight="3dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="@string/orderVerify"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/btnOrderVerify"
        flatui:fl_theme="@array/btnOrderTheme"
        />

</RelativeLayout>
